// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model NGO {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  description String?
  location    String?
  resources   Resource[]
}

model Resource {
  id       Int    @id @default(autoincrement())
  name     String
  quantity Int
  ngoId    Int
  NGO      NGO    @relation(fields: [ngoId], references: [id])
}

