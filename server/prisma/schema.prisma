// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Supabase connection string
}

generator client {
  provider = "prisma-client-js"
}

// NGO Model
model NGO {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  password     String
  orgType      String
  location     String
  phoneNumber  String
  createdAt    DateTime @default(now())
}

// Donor Model
model Donor {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
